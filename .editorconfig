# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true


[*.{html,tsx,vue,jsx}]
max_line_length = 90
indent_size = 4

[*.{css,scss}]
max_line_length = 80
indent_size = 6

[*.{json,yaml,yml}]
max_line_length = 80
indent_size = 2

[*.{ts,js}]
quote_type = single
ij_typescript_use_double_quotes = false
indent_size = 6

[*.md]
max_line_length = off
trim_trailing_whitespace = false
